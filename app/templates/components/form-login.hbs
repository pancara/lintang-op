<div>
  {{input type="text" class="txt-operatorid pw-input" name="operatorId"
  placeholder="Operator ID" autocomplete="off" value=operatorId }}
</div>
<div>
  {{input type="text" class="txt-userid pw-input" name="userId"
  placeholder="User Name" autocomplete="off" value=userId }}
</div>
<div>
  {{input type="password" class="txt-password pw-input" name="password"
  placeholder="Password" autocomplete="off" value=password  key-down="keyDown" }}
</div>

<div class="link">
    {{pw-checkbox checked=rememberMe}}
    <span>
      Remember Me
    </span>
  {{#link-to "forget-password"}}Forgot Password ?{{/link-to}}
  {{#link-to "help"}}Help{{/link-to}}
</div>

<div class="form-group">
    <button type="button" class="pw-button" {{action "submit"}}>
        LOGIN
    </button>
</div>
