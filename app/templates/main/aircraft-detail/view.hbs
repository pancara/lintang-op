<div class="row">
    <div class="col-lg-12">
        <table class="aircraft-detail" style="width: auto;">
            <tr>
                <td class="field" style="width: 180px;">Code</td>
                <td class="value" style="width: 220px;">{{aircraft.code}}</td>
                <td class="field" style="width: 180px;">Registration Number</td>
                <td class="value" style="width: auto;">{{aircraft.registrationNumber}}</td>
            </tr>
            <tr>
                <td class="field">Aircraft Type</td>
                <td class="value">{{aircraft.aircraftType}}</td>

                <td class="field">Model</td>
                <td class="value">{{aircraft.model}}</td>
            </tr>
            <tr>
                <td class="field">Aircraft Name</td>
                <td class="value">{{aircraft.description}}</td>

                <td class="field">Year Of Make</td>
                <td class="value">{{aircraft.yearOfMake}}</td>
            </tr>
            <tr>
                <td class="field">Seating Max</td>
                <td class="value">{{aircraft.maxPassengers}}</td>

                <td class="field">Safety Rating</td>
                <td class="value">{{aircraft.safetyRating}}</td>
            </tr>
            <tr>
                <td class="field">Base Price</td>
                <td class="value">{{aircraft.basePrice}}</td>

                <td class="field">Margin Price</td>
                <td class="value">{{aircraft.marginPrice}}</td>
            </tr>

            <tr>
                <td class="field">Max Range</td>
                <td class="value">{{aircraft.maxRangeNm}} Nm <br/> {{aircraft.maxRangeKm}} Km</td>

                <td class="field">Speed</td>
                <td class="value">{{aircraft.speedKts}} Kts <br/> {{aircraft.speedKmh}} Kmh</td>
            </tr>
            <tr>
                <td class="field images">Images</td>
            </tr>

          {{#each aircraft.images as |image|}}
              <tr>
                  <td></td>
                  <td class="value images" colspan="3" style="vertical-align: top;">
                    {{pw-image source=image.url style="max-width: 250px;"}}
                      <button class="btn btn-danger btn-xs">remove</button>
                  </td>
              </tr>
          {{/each}}

        </table>
    </div>
</div>
