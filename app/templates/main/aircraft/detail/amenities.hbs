<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-4">
              {{#if selectingAmenity}}
                  <button class="btn btn-xs pull-right" {{action "hideAmenityList"}} style="margin-bottom: 4px;">
                    {{fa-icon "caret-up"}} &nbsp;
                      Hide Available Amenities
                  </button>
              {{else}}
                  <button class="btn btn-xs pull-right" {{action "showAmenityList" amenity}}
                          style="margin-bottom: 4px;">
                    {{fa-icon "caret-down"}} &nbsp;
                      Show Available Amenities
                  </button>
              {{/if}}

              {{#if selectingAmenity}}
                {{pw-table data=amenitiesList
                headerTemplate="main/aircraft/detail/amenities/header"
                footerTemplate="main/aircraft/detail/amenities/footer"
                masterTemplate="main/aircraft/detail/amenities/row"
                detailTemplate="main/aircraft/detail/amenities/row-detail"
                isZebra=false
                isBordered =true
                addAmenity=(action "addAmenity")
                }}
                {{pw-paging register-as=paging refresh=(action "refresh")}}
              {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="pw-table pw-bordered">
                    <thead>
                    <tr>
                        <th colspan="6">Aircraft Amenities</th>
                    </tr>
                    <tr>
                        <th style="width: 10px;"></th>
                        <th style="width: 40px;"></th>
                        <th>Name</th>
                        <th>Description</th>
                        <th style="width: 10px;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each amenities as |amenity index |}}
                        <tr>
                            <td>{{ add index 1 }}.</td>
                            <td>
                              {{pw-image default="images/default/amenity.png" source=amenity.logo style="max-width: 100px; float: left; margin-right: 8px;"}}
                            </td>
                            <td>{{amenity.name}}</td>
                            <td>{{amenity.description}}</td>
                            <td>
                                <button class="btn btn-danger btn-xs" {{action "deleteAmenity" amenity}}>delete</button>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td></td>
                        <td colspan="5">
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>