{{#pw-page-title title="Sales" icon="area-chart"}}
{{/pw-page-title}}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="pw-panel pw-panel-align-right">
                <button class="btn btn-xs" {{action "toggleFilter"}}>
                  {{#if shownFilter }}
                      Hide Filter &nbsp;
                    {{fa-icon "caret-up"}}
                  {{else}}
                      Show Filter &nbsp;
                    {{fa-icon "caret-down"}}
                  {{/if}}
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
          {{pw-sales-filter
          startDate=startDate
          endDate=endDate
          aircraftAvailable=aircraftAvailable
          aircraftTypes=aircraftTypes
          register-as=filterSales
          shown=shownFilter}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-3">
                  {{pw-tile value='0.000.000' caption='Total Sales' description='total sales' tileType='pw-tile-blue' icon='line-chart'}}
                </div>
                <div class="col-lg-3">
                  {{pw-tile value='0.000' caption='Total Booking' description='total booking' tileType='pw-tile-green' icon='plane'}}
                </div>
                <div class="col-lg-3">
                  {{pw-tile value='0.000.000' caption='Average sales' description='average sales' tileType='pw-tile-red' icon='pie-chart'}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="pw-table pw-zebra pw-highlighted pw-bordered">
                        <thead>
                        <tr>
                            <th colspan="7" style="text-align: center;">List of Bookings</th>
                        </tr>
                        <tr>
                            <th>No</th>
                            <th>Booking Code</th>
                            <th>Aircraft</th>
                            <th>Date</th>
                            <th>Route</th>
                            <th class="pw-number">Rp. Value</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
