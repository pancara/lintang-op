<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
          {{#if error}}
              <div class="alert alert-danger" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}

          {{#if success}}
              <div class="alert alert-success" role="alert">
                {{errorMessage}}
              </div>
          {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">User Name</span></div>
        <div class="col-lg-5">
            <span class="value">{{user.username}}</span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">Operator</span></div>
        <div class="col-lg-5">
            <span class="value">
          {{user.operatorCode}} &nbsp;
              {{user.operatorName}}
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"><span class="field">First Name</span></div>
        <div class="col-lg-3">
            <span class="value">
              {{user.firstName}}
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"><span class="field">Last Name</span></div>
        <div class="col-lg-3">
            <span class="value">
              {{user.lastName}}
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"><span class="field">Gender</span></div>
        <div class="col-lg-3">
            <span class="value">
              {{user.gender}}
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2">
            <span class="field">Role</span>
        </div>
        <div class="col-lg-3">
            <select class="form-control" onchange={{action "selectRole" value="target.value"}}>
                <option>-</option>
              {{#each userRoles as |roleOption|}}
                  <option value={{roleOption}} selected={{eq role roleOption}}>{{roleOption}}</option>
              {{/each}}
            </select>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-9 col-lg-offset-2">
            <button class="btn btn-success btn-sm" {{action "save"}}>
              {{fa-icon "check"}} &nbsp; Save
            </button>
            <button class="btn btn-danger btn-sm" {{action "cancel"}}>
              {{fa-icon "remove"}} &nbsp; Cancel
            </button>
        </div>
    </div>
</div>